{
  "name": "web-apache",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "Apache HTTP server role",
  "default_attributes": {
    "apache": {
      "default_site_enabled": false,
      "default_modules": [
        "mod_filter",
        "mod_php5",
        "mod_rewrite",
        "mod_ssl",
        "mod_deflate",
        "mod_expires",
        "mod_headers"
      ]
    },
    "services": {
      "httpd": ["enable", "start"]
    }
  },
  "run_list": [
    "recipe[apache2]",
    "recipe[config-driven-helper::services]",
    "recipe[config-driven-helper::apache-sites]"
  ]
}
